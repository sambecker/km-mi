{
  "extends": "next/core-web-vitals",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@next/next/no-img-element": "off",
    "@typescript-eslint/no-unused-expressions": ["warn"],
    "@typescript-eslint/no-unused-vars": [
      "warn", {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "comma-dangle": [
      "warn",
      "always-multiline"
    ],
    "indent": [
        "warn",
        2
    ],
    "linebreak-style": [
        "warn",
        "unix"
    ],
    "quotes": [
        "warn",
        "single"
    ],
    "semi": [
        "warn",
        "always"
    ],
    "max-len": [
      "warn",
      { "code": 80 }
  ]
  }
}
